<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_draw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@android:color/white"
    android:foreground="@drawable/field"
    tools:context="com.vandenrobotics.frccoach.actitivies.DrawActivity">

    <com.vandenrobotics.frccoach.views.DrawableView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:Transparent="true"
        android:id="@+id/stragetyImageView"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="Save"
        />

    <Button
        android:text="Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/redButton"
        android:layout_alignParentBottom="true"
        android:onClick="changeColor"
        />

    <Button
        android:text="Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blackButton"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/redButton"
        android:layout_toEndOf="@id/redButton"
        android:onClick="changeColor"
        />

    <Button
        android:text="Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/greenButton"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/blackButton"
        android:layout_toEndOf="@id/blackButton"
        android:onClick="changeColor"
        />

    <Button
        android:text="Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blueButton"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/greenButton"
        android:layout_toEndOf="@id/greenButton"
        android:onClick="changeColor"
        />

</RelativeLayout>
